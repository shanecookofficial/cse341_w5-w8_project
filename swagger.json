{
  "swagger": "2.0",
  "info": {
    "description": "This is a simple API for managing books in a library database.",
    "version": "1.0.0",
    "title": "Library Books API"
  },
  "host": "/cse341-w5-w8-project.onrender.com",
  "basePath": "/",
  "tags": [
    {
      "name": "books",
      "description": "Everything about your Books"
    }
  ],
  "schemes": ["https"],
  "paths": {
    "/books": {
      "get": {
        "tags": ["books"],
        "summary": "Get all books",
        "description": "Returns a list of books",
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "A list of books",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/Book"
              }
            }
          }
        }
      },
      "post": {
        "tags": ["books"],
        "summary": "Add a new book",
        "description": "Adds a new book to the library database",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Book object that needs to be added to the store",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Book"
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Book created"
          },
          "500": {
            "description": "Error occurred"
          }
        }
      }
    },
    "/books/{id}": {
      "put": {
        "tags": ["books"],
        "summary": "Update an existing book",
        "description": "Updates an existing book with new information",
        "consumes": ["application/json"],
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "type": "string",
            "description": "ID of the book to update"
          },
          {
            "in": "body",
            "name": "body",
            "description": "Book object with updated information",
            "required": true,
            "schema": {
              "$ref": "#/definitions/Book"
            }
          }
        ],
        "responses": {
          "204": {
            "description": "Book successfully updated"
          },
          "404": {
            "description": "Book not found"
          },
          "500": {
            "description": "Error occurred"
          }
        }
      },
      "delete": {
        "tags": ["books"],
        "summary": "Delete a book",
        "description": "Deletes a book from the library database",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "type": "string",
            "description": "ID of the book to delete"
          }
        ],
        "responses": {
          "204": {
            "description": "Book successfully deleted"
          },
          "404": {
            "description": "Book not found"
          },
          "500": {
            "description": "Error occurred"
          }
        }
      }
    },
    "/books/checkOut/{id}": {
      "put": {
        "tags": ["books"],
        "summary": "Check out a book",
        "description": "Marks a book as checked out and unavailable",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "type": "string",
            "description": "ID of the book to check out"
          }
        ],
        "responses": {
          "204": {
            "description": "Book checked out successfully"
          },
          "404": {
            "description": "Book not available for checkout"
          }
        }
      }
    },
    "/books/checkIn/{id}": {
      "put": {
        "tags": ["books"],
        "summary": "Check in a book",
        "description": "Marks a book as checked in and available",
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "required": true,
            "type": "string",
            "description": "ID of the book to check in"
          }
        ],
        "responses": {
          "204": {
            "description": "Book checked in successfully"
          },
          "404": {
            "description": "Book is already available for checkout"
          }
        }
      }
    }
  },
  "definitions": {
    "Book": {
      "type": "object",
      "required": [
        "title",
        "author",
        "isbn",
        "publicationDate",
        "genre",
        "status"
      ],
      "properties": {
        "title": {
          "type": "string"
        },
        "author": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "isbn": {
          "type": "string"
        },
        "publicationDate": {
          "type": "string",
          "format": "date"
        },
        "genre": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "status": {
          "type": "string",
          "enum": ["available", "checked out", "reserved", "not available"]
        }
      }
    }
  }
}
